@inherits LayoutComponentBase
@inject NavigationManager _navManager

<div class="main" style="z-index:5; padding:0px">
    <!-- Top Menu Bar -->
    <nav style="width:100%">
        <div class="custom-dropdown">
            <div class="GeneralTillLogo">
                <label>General Till</label>
            </div>

            <div class="custom-dropdown-item custom-dropdown-item-hover">
                <a class="custom-dropdown-item-hover" style="margin-top:5" href="/">Home</a>
            </div>

            <div class="custom-dropdown-item">
                <a class="custom-dropdown-item-hover" style="margin-top:8px" href="/cashregister">Cash Register</a>
            </div>

            <div class="custom-dropdown-item">
                <button>Products</button>
                <ul>
                    <li><a href="/product">All Products</a></li>
                    <li><a href="/product/add">Add Product</a></li>
                    <li><a @onclick="Navigate" href="">Product Settings</a></li>
                </ul>
            </div>

            <div class="custom-dropdown-item">
                <button>Customers</button>
                <ul>
                    <li><a href="/customer">All Customers</a></li>
                    <li><a href="/customer/add">Add Customer</a></li>
                    <li><a href="/customer/settings">Customer Settings</a></li>
                </ul>
            </div>

            <div class="custom-dropdown-item">
                <button>Recieving</button>
                <ul>
                    <li><a href="/recieving/all">View All</a></li>
                    <li><a href="/recieving/new">Create new recieving</a></li>
                </ul>
            </div>

            <div class="custom-dropdown-item">
                <button>Reports</button>
                <ul>
                    <li><a href="/reports/all">All Reports</a></li>
                    <li><a href="/reports/customer">Customer Reports</a></li>
                    <li><a href="/reports/product">Product Reports</a></li>
                    <li><a href="/reports/sales">Sales Reports</a></li>
                    <li><a href="/reports/recieving">Recieving Reports</a></li>
                </ul>
            </div>

            <!-- Division between the top nav menu parts and the login display functionality -->
            <div style="width:15%"></div>

            <div class="loginDisplay">
                <LoginDisplay></LoginDisplay>
            </div>
        </div>
    </nav>
    <div class="content" style="padding:0px; height:100%;">
        @Body
    </div>
</div>

@code{

    public void Navigate()
    {
        _navManager.NavigateTo("/product/settings");
    }

}

